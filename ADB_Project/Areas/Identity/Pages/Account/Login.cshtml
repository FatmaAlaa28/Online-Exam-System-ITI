@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    .login-container {
        max-width: 450px;
        margin: 50px auto;
    }

    .login-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .login-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 40px 30px;
        text-align: center;
    }

        .login-header i {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .login-header h2 {
            margin: 0;
            font-weight: 600;
        }

    .login-body {
        padding: 40px 30px;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        height: auto;
    }

        .form-control:focus {
            border-color: #1e3c72;
            box-shadow: 0 0 0 0.2rem rgba(30, 60, 114, 0.15);
        }

    .form-floating label {
        padding: 1rem 15px;
    }

    .btn-login {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(30, 60, 114, 0.3);
            background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%);
        }

    .login-links {
        margin-top: 25px;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
        text-align: center;
    }

        .login-links a {
            color: #1e3c72;
            text-decoration: none;
            display: block;
            margin: 10px 0;
            transition: color 0.2s;
        }

            .login-links a:hover {
                color: #2a5298;
                text-decoration: underline;
            }

    .checkbox-custom {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

        .checkbox-custom input {
            width: 20px;
            height: 20px;
            margin-right: 10px;
            cursor: pointer;
        }

        .checkbox-custom label {
            margin: 0;
            cursor: pointer;
            user-select: none;
        }

    .external-login-section {
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #e9ecef;
    }

        .external-login-section h5 {
            text-align: center;
            color: #6c757d;
            margin-bottom: 20px;
        }

    .btn-external {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        margin-bottom: 10px;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <i class="fas fa-user-circle"></i>
            <h2>Welcome Back</h2>
            <p class="mb-0">Sign in to your account</p>
        </div>

        <div class="login-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                    <label asp-for="Input.Password">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox-custom">
                    <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" id="rememberMe" />
                    <label asp-for="Input.RememberMe" for="rememberMe">
                        Remember me
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-login">
                        <i class="fas fa-sign-in-alt me-2"></i>Log In
                    </button>
                </div>

                <div class="login-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">
                        <i class="fas fa-question-circle me-2"></i>Forgot your password?
                    </a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        <i class="fas fa-user-plus me-2"></i>Create new account
                    </a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                        <i class="fas fa-envelope me-2"></i>Resend email confirmation
                    </a>
                </div>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="external-login-section">
                        <h5>Or sign in with</h5>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <button type="submit" class="btn btn-outline-primary btn-external" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <i class="fab fa-@provider.Name.ToLower() me-2"></i>@provider.DisplayName
                                </button>
                            </form>
                        }
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}