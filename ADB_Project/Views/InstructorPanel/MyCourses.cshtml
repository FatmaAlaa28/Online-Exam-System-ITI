@* Views/InstructorPanel/MyCourses.cshtml *@
@model List<Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Courses (@Model.Count)</h2>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
                    <div class="card h-100 shadow hover-shadow">
                        <div class="card-header bg-gradient-primary text-white">
                            <h5 class="mb-0">@course.CourseCode - @course.CourseName</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1">@course.Description</p>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-graduation-cap"></i> @course.CreditHours credits
                                </small>
                            </div>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Questions" asp-route-courseId="@course.CourseId"
                                   class="btn btn-outline-info">
                                    <i class="fas fa-question-circle"></i> Questions
                                </a>
                                <a asp-action="GenerateExam" class="btn btn-outline-success">
                                    <i class="fas fa-file-alt"></i> New Exam
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-book fa-5x text-muted mb-4"></i>
            <h4>No courses assigned</h4>
            <p class="text-muted">Contact your administrator to get courses assigned to you.</p>
            <a asp-action="Dashboard" class="btn btn-primary">
                <i class="fas fa-home"></i> Go to Dashboard
            </a>
        </div>
    }
</div>