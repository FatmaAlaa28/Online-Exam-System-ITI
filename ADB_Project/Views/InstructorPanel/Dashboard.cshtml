@using ADB_Project.Models.ViewModels
@* Views/InstructorPanel/Dashboard.cshtml *@
@model InstructorDashboardVM

@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Welcome, Instructor! 👋</h2>

    <div class="row">
        <!-- My Courses Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">My Courses (@Model.Courses.Count)</h4>
                </div>
                <div class="card-body p-0">
                    @if (Model.Courses.Any())
                    {
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Course Code</th>
                                    <th>Course Name</th>
                                    <th>Credit Hours</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.Courses)
                                {
                                    <tr>
                                        <td><strong>@course.CourseCode</strong></td>
                                        <td>@course.CourseName</td>
                                        <td>@course.CreditHours</td>
                                        <td class="text-center">
                                            <a asp-action="Questions" asp-route-courseId="@course.CourseId"
                                               class="btn btn-sm btn-outline-info me-1" title="Manage Questions">
                                                <i class="fas fa-question-circle"></i> Questions
                                            </a>
                                            <a asp-action="GenerateExam" class="btn btn-sm btn-success" title="Create New Exam">
                                                <i class="fas fa-plus"></i> New Exam
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center py-5 text-muted">
                            No courses assigned yet. Contact admin to assign courses.
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Exams Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Recent Exams</h4>
                    <a asp-action="MyExams" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.Exams.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var exam in Model.Exams.Take(6))
                            {
                                <a asp-action="ExamDetails" asp-route-examId="@exam.ExamId"
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@exam.ExamName</strong><br>
                                        <small class="text-muted">@exam.Course.CourseName • @exam.TotalQuestions questions</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@exam.ExamDate?.ToString("MMM dd")</span>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center py-5 text-muted">No exams created yet.</p>
                    }
                </div>
                <div class="card-footer text-center">
                    <a asp-action="GenerateExam" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Generate New Exam
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>