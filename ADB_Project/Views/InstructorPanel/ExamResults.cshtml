@using ADB_Project.Models.ViewModels
@* Views/InstructorPanel/ExamResults.cshtml *@
@model ExamResultsVM

@{
    ViewData["Title"] = $"Results - {Model.Exam.ExamName}";
}

<div class="container mt-4">
    <h2 class="mb-4">Results: <strong>@Model.Exam.ExamName</strong></h2>
    <p class="text-muted">Course: @Model.Exam.Course.CourseName</p>

    <!-- Stats Cards -->
    <div class="row g-3 mb-5">
        <div class="col-md-3">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h5>Total Assigned</h5>
                    <h3>@Model.TotalAssigned</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h5>Completed</h5>
                    <h3>@Model.Completed</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center @(Model.PassRate >= 60 ? "bg-success" : "bg-warning") text-white">
                <div class="card-body">
                    <h5>Pass Rate</h5>
                    <h3>@Model.PassRate<span class="fs-5">%</span></h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h5>Avg Score</h5>
                    <h3>@Model.AveragePercentage<span class="fs-5">%</span></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Grades -->
    @if (Model.ExamGrades.Any())
    {
        <h4>Student Grades (@Model.Completed)</h4>
        <div class="table-responsive mb-5">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Student</th>
                        <th>Score</th>
                        <th>%</th>
                        <th>Grade</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.ExamGrades.OrderByDescending(g => g.Percentage))
                    {
                        <tr>
                            <td>@grade.Student.StudentName</td>
                            <td><strong>@grade.TotalScore/@grade.MaxScore</strong></td>
                            <td>@(grade.Percentage?.ToString("F1"))%</td>
                            <td>@(grade.Grade ?? "N/A")</td>
                            <td>
                                <span class="badge @(grade.Status == "Pass" ? "bg-success" : "bg-danger")">
                                    @grade.Status
                                </span>
                            </td>
                            <td>@grade.GradeDate?.ToString("MMM dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Not Taken -->
    @if (Model.NotTaken > 0)
    {
        <div class="alert alert-warning">
            <h5><i class="fas fa-clock"></i> Not Taken Yet (@Model.NotTaken students)</h5>
            <div class="row">
                @foreach (var student in Model.NotTakenStudents.Take(10))
                {
                    <div class="col-md-4 mb-2">@student.StudentName</div>
                }
                @if (Model.NotTakenStudents.Count > 10)
                {
                    <div class="col-12">... and @((Model.NotTaken - 10)) more</div>
                }
            </div>
        </div>
    }

    <!-- Hardest Questions -->
    @if (Model.QuestionStats.Any())
    {
        <h4>Question Performance <small class="text-muted">(Hardest First)</small></h4>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Question</th>
                        <th>Correct</th>
                        <th>Attempts</th>
                        <th>Correct %</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var q in Model.QuestionStats.Take(10))
                    {
                        <tr class="@(q.CorrectPercentage < 50 ? "table-danger" : q.CorrectPercentage < 70 ? "table-warning" : "")">
                            <td>@q.QuestionText.Substring(0, Math.Min(60, q.QuestionText.Length))@(q.QuestionText.Length > 60 ? "..." : "")</td>
                            <td>@q.CorrectAnswers/@q.TotalAttempts</td>
                            <td>@q.TotalAttempts</td>
                            <td>
                                <strong>@q.CorrectPercentage<span class="fs-6">%</span></strong>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>