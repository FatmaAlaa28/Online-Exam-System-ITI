@using ADB_Project.Models.ViewModels
@model AssignExamVM

@{
    ViewData["Title"] = "Assign Exam";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4>Assign Exam to Students</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AssignExam" method="post">
                        <input asp-for="ExamId" type="hidden" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6>Assignment Method</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="AssignByDepartment" id="byDept" value="true"
                                           @(Model.AssignByDepartment ? "checked" : "") />
                                    <label class="form-check-label fw-bold" for="byDept">
                                        By Department
                                    </label>
                                </div>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="radio" name="AssignByDepartment" id="byStudents" value="false"
                                           @(Model.AssignByDepartment == false ? "checked" : "") />
                                    <label class="form-check-label fw-bold" for="byStudents">
                                        Manual Selection
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold">Due Date (Optional)</label>
                                <input asp-for="DueDate" class="form-control" type="datetime-local" />
                            </div>
                        </div>

                        <!-- Department Selection -->
                        <div id="deptSection" class="mb-4 @(Model.AssignByDepartment ? "" : "d-none")">
                            <label asp-for="DepartmentId" class="form-label fw-bold">Select Department</label>
                            <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select" name="DepartmentId">
                                <option value="">-- Choose Department --</option>
                            </select>
                        </div>

                        <!-- Students Checkboxes -->
                        <div id="studentSection" class="mb-4 @(Model.AssignByDepartment ? "d-none" : "")">
                            <label class="form-label fw-bold">Select Students</label>
                            <div class="border p-3" style="max-height: 400px; overflow-y: auto;">
                                @if (Model.Students != null && Model.Students.Any())
                                {
                                    foreach (var item in Model.Students)
                                    {
                                        var isChecked = (Model.SelectedStudentIds ?? Array.Empty<int>()).Contains(int.Parse(item.Value));
                                        <div class="form-check">
                                            <input type="checkbox"
                                                   name="SelectedStudentIds"
                                                   value="@item.Value"
                                                   class="form-check-input"
                                                   id="student_@item.Value"
                                                   @(isChecked ? "checked" : "") />
                                            <label class="form-check-label" for="student_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        No students are enrolled in this course yet.
                                    </div>
                                }
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="text-end mt-4">
                            <a asp-action="ExamDetails" asp-route-examId="@Model.ExamId" class="btn btn-secondary me-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                Assign Exam
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('input[name="AssignByDepartment"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const isDept = this.value === 'true';
                document.getElementById('deptSection').classList.toggle('d-none', !isDept);
                document.getElementById('studentSection').classList.toggle('d-none', isDept);
            });
        });
    </script>
}