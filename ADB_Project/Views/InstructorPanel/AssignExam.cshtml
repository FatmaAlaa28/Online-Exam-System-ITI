@using ADB_Project.Models.ViewModels
@model AssignExamVM
@{
    ViewData["Title"] = "Assign Exam";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-users"></i> Assign Exam to Students</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AssignExam" method="post">
                        <input asp-for="ExamId" type="hidden" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6>Assignment Method</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="AssignByDepartment" id="byDept" value="true"
                                           @(Model.AssignByDepartment ? "checked" : "") />
                                    <label class="form-check-label fw-semibold" for="byDept">
                                        📁 By Department (All students in selected dept)
                                    </label>
                                </div>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="radio" name="AssignByDepartment" id="byStudents" value="false"
                                           @(Model.AssignByDepartment == false ? "checked" : "") />
                                    <label class="form-check-label fw-semibold" for="byStudents">
                                        👤 Manual Selection (Choose specific students)
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Due Date (Optional)</label>
                                <input asp-for="DueDate" class="form-control" type="datetime-local" />
                            </div>
                        </div>

                        <!-- Department Selection -->
                        <div id="deptSection" class="mb-4 @(Model.AssignByDepartment ? "" : "d-none")">
                            <label asp-for="DepartmentId" class="form-label fw-semibold">Select Department</label>
                            <select asp-for="DepartmentId" class="form-select" name="DepartmentId">
                                <option value="">Choose department...</option>
                                @if (Model.Departments != null)
                                {
                                    foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Value" selected="@(dept.Selected)">@dept.Text</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Student Selection - CHECKBOXES بدل SELECT MULTIPLE -->
                        <div id="studentSection" class="mb-4 @(Model.AssignByDepartment ? "d-none" : "")">
                            <label class="form-label fw-semibold">Select Students (Hold Ctrl/Cmd for multiple)</label>
                            <hr />
                            @if (Model.Students != null && Model.Students.Count() > 0)
                            {
                                foreach (var item in Model.Students)
                                {
                                    var studentId = int.Parse(item.Value);
                                    var isSelected = (Model.SelectedStudentIds ?? new int[0]).Contains(studentId);
                                    <div class="form-check">
                                        <input type="checkbox"
                                               name="SelectedStudentIds"
                                               id="student_@item.Value"
                                               value="@item.Value"
                                               class="form-check-input"
                                               @(isSelected ? "checked" : "") />
                                        <label class="form-check-label" for="student_@item.Value">
                                            @item.Text
                                        </label>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    No students enrolled in this course yet.
                                    <strong>Contact admin</strong> to enroll students first.
                                </div>
                            }
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ExamDetails" asp-route-examId="@Model.ExamId" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-4">
                                <i class="fas fa-paper-plane"></i> Assign Exam Now
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle sections based on radio buttons
        document.querySelectorAll('input[name="AssignByDepartment"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.getElementById('deptSection').classList.toggle('d-none', !this.checked);
                document.getElementById('studentSection').classList.toggle('d-none', this.checked);
            });
        });
    </script>
}