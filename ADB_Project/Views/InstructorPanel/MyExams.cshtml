@* Views/InstructorPanel/MyExams.cshtml *@
@model List<Exam>

@{
    ViewData["Title"] = "My Exams";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Exams (@Model.Count)</h2>
        <a asp-action="GenerateExam" class="btn btn-success">
            <i class="fas fa-plus"></i> Generate New Exam
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Exam Name</th>
                        <th>Course</th>
                        <th>Type</th>
                        <th>Questions</th>
                        <th>Degree</th>
                        <th>Date</th>
                        <th>Duration</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model)
                    {
                        <tr>
                            <td><strong>@exam.ExamName</strong></td>
                            <td>@exam.Course.CourseName</td>
                            <td>
                                <span class="badge bg-info">@exam.ExamType</span>
                            </td>
                            <td>@exam.TotalQuestions</td>
                            <td>@exam.TotalDegree</td>
                            <td>@exam.ExamDate?.ToString("dd MMM yyyy")</td>
                            <td>@exam.DurationMinutes min</td>
                            <td class="text-center">
                                <a asp-action="ExamDetails" asp-route-examId="@exam.ExamId"
                                   class="btn btn-sm btn-primary me-1" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="AssignExam" asp-route-examId="@exam.ExamId"
                                   class="btn btn-sm btn-warning me-1" title="Assign to Students">
                                    <i class="fas fa-users"></i>
                                </a>
                                <a asp-action="ExamResults" asp-route-examId="@exam.ExamId"
                                   class="btn btn-sm btn-success" title="View Results">
                                    <i class="fas fa-chart-bar"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <p class="text-muted">You haven't created any exams yet.</p>
            <a asp-action="GenerateExam" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Create Your First Exam
            </a>
        </div>
    }
</div>