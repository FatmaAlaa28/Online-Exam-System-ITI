@using ADB_Project.Models.ViewModels
@* Views/StudentPanel/Exams.cshtml *@
@model List<StudentExamListVM>

@{
    ViewData["Title"] = "My Exams";
}

<div class="container mt-5">
    <!-- Back to Dashboard Button -->
    <div class="mb-4">
        <a asp-action="Dashboard" asp-controller="StudentPanel" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <h1 class="display-6 fw-bold text-center mb-5 text-primary">
        <i class="fas fa-file-alt me-3"></i>My Exams
    </h1>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var exam in Model)
            {
                var statusBadge = exam.HasSubmitted ? "bg-success" : exam.HasStarted ? "bg-warning" : "bg-primary";
                var statusText = exam.HasSubmitted ? "Submitted" : exam.HasStarted ? "In Progress" : "Not Started";
                var canStart = !exam.HasSubmitted;

                <div class="col-lg-6 col-xxl-4">
                    <div class="card shadow-lg h-100 border-0 hover-shadow">
                        <div class="card-header @statusBadge text-white">
                            <h5 class="mb-0">@exam.ExamName</h5>
                            <small>@exam.CourseName</small>
                        </div>
                        <div class="card-body">
                            <div class="row text-muted small mb-3">
                                <div class="col-6">
                                    <i class="fas fa-clock"></i> @exam.DurationMinutes minutes
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-list-ol"></i> @exam.TotalQuestions questions
                                </div>
                            </div>

                            @if (exam.ExamDate.HasValue)
                            {
                                <p class="mb-2"><i class="fas fa-calendar"></i> Exam Date: @exam.ExamDate.Value.ToString("ddd, dd MMM yyyy")</p>
                            }
                            @if (exam.DueDate.HasValue)
                            {
                                var isOverdue = exam.DueDate < DateTime.Now;
                                <p class="mb-3">
                                    <i class="fas fa-hourglass-end"></i> Due: @exam.DueDate.Value.ToString("dd MMM yyyy HH:mm")
                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger ms-2">Overdue!</span>
                                    }
                                </p>
                            }

                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <span class="badge @statusBadge fs-6 px-3 py-2">@statusText</span>

                                @if (canStart)
                                {
                                    <form asp-action="StartExam" asp-route-examId="@exam.ExamId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-play me-2"></i>Start Exam
                                        </button>
                                    </form>
                                }
                                else if (exam.HasGrade)
                                {
                                    <a asp-action="ExamResult" asp-route-examId="@exam.ExamId" class="btn btn-success btn-lg">
                                        <i class="fas fa-eye me-2"></i>View Result
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="TakeExam" asp-route-examId="@exam.ExamId" class="btn btn-warning btn-lg">
                                        <i class="fas fa-clock me-2"></i>Continue
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x text-muted mb-4"></i>
            <h3>No exams assigned yet</h3>
            <p class="text-muted lead">Your instructor will assign exams soon. Check back later!</p>
        </div>
    }
</div>