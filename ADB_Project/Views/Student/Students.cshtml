@model IEnumerable<ADB_Project.Models.Student>

@{
    ViewData["Title"] = "Manage Students";
}

<div class="container mt-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill"></i> Manage Students</h2>
        <a asp-action="CreateStudent" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Branch</th>
                        <th>Status</th>
                        <th style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.StudentId</td>
                                <td><strong>@student.StudentName</strong></td>
                                <td>@student.Email</td>
                                <td>@(student.Dept?.DeptName ?? "N/A")</td>
                                <td>@(student.Branch?.BranchName ?? "N/A")</td>
                                <td>
                                    <span class="badge @(student.IsActive == true ? "bg-success" : "bg-secondary")">
                                        @(student.IsActive == true ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditStudent" asp-route-id="@student.StudentId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@student.StudentId">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@student.StudentId" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete <strong>@student.StudentName</strong>?
                                                    <p class="text-danger mt-2"><small>This will permanently delete the student and their login account.</small></p>
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="DeleteStudent" method="post">
                                                        <input type="hidden" name="id" value="@student.StudentId" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Yes, Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center py-4 text-muted">No students found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
