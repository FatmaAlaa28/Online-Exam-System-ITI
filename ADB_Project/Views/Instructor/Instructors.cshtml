@model IEnumerable<ADB_Project.Models.Instructor>

@{
    ViewData["Title"] = "Manage Instructors";
}

<div class="container mt-4">

    @* Success Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge"></i> Manage Instructors</h2>
        <a asp-controller="Instructor" asp-action="CreateInstructor" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Instructor
        </a>
    </div>

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Branch</th>
                        <th>Status</th>
                        <th style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var ins in Model)
                        {
                            <tr>
                                <td>@ins.InstructorId</td>
                                <td><strong>@ins.InstructorName</strong></td>
                                <td>@ins.Email</td>
                                <td>@(ins.Branch?.BranchName ?? "N/A")</td>
                                <td>
                                    @if (ins.IsActive == true)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Instructor" asp-action="EditInstructor" asp-route-id="@ins.InstructorId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        <button type="button" class="btn btn-sm btn-danger"
                                                onclick="showDeleteModal(@ins.InstructorId, '@ins.InstructorName')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <p class="text-muted mb-1">No instructors found.</p>
                                <a asp-controller="Instructor" asp-action="CreateInstructor" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-plus-circle"></i> Create the first one
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Single Delete Modal for ALL instructors -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the instructor:</p>
                <p class="text-center"><strong class="fs-5" id="instructorNameDisplay"></strong></p>
                <p class="text-danger small">
                    <i class="bi bi-exclamation-circle"></i>
                    This will also delete their login account. This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-controller="Instructor" asp-action="DeleteInstructor" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="instructorIdInput" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(instructorId, instructorName) {
            document.getElementById('instructorIdInput').value = instructorId;
            document.getElementById('instructorNameDisplay').textContent = instructorName;

            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}