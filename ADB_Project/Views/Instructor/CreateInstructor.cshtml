@model ADB_Project.Models.Instructor

@{
    ViewData["Title"] = "Create New Instructor";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Create New Instructor</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Instructor" asp-action="CreateInstructor" method="post">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="InstructorName" class="form-label">Instructor Name</label>
                        <input asp-for="InstructorName" class="form-control" placeholder="e.g., Dr. John Doe" />
                        <span asp-validation-for="InstructorName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="user@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" id="password" type="password" class="form-control" required />
                        <small class="form-text text-muted">The password for the instructor's login account.</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="+123456789" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HireDate" class="form-label">Hire Date</label>
                        <input asp-for="HireDate" type="date" class="form-control" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BranchId" class="form-label">Branch</label>
                        <select asp-for="BranchId" class="form-select" asp-items="@(new SelectList(ViewBag.Branches, "BranchId", "BranchName"))">
                            <option value="">-- Select Branch --</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Instructor
                    </button>
                    <a asp-controller="Instructor" asp-action="Instructors" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}