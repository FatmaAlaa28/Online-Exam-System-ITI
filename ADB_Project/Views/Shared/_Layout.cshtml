@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper Html
@using Microsoft.AspNetCore.Mvc.Controllers
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ADB_Project.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            width: 220px;
            min-height: 100vh;
            /* background-color: #212529; */
            background-color: #0d161f;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar h4 {
                color: #fff;
                padding: 20px;
                text-align: center;
            }

            .sidebar .menu {
                flex-grow: 1;
            }

            .sidebar a {
                color: #adb5bd;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #343a40;
                    color: #fff;
                }

                .sidebar a.active {
                    background-color: #0d6efd;
                    color: #fff;
                }

            .sidebar .user-section {
                border-top: 1px solid #495057;
                padding: 15px 20px;
            }

                .sidebar .user-section form {
                    display: inline;
                }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

        footer {
            margin-left: 220px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Information Technology Institue</h4>

        <div class="menu">
            @if (User.IsInRole("Student"))
            {
                <!-- Student Menu -->
                <a class="@(controller == "StudentPanel" && action == "Dashboard" ? "active" : "")" asp-controller="StudentPanel" asp-action="Dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            }
            else if (User.IsInRole("Instructor"))
            {
                <a class="@(controller == "Student" && action == "Students" ? "active" : "")" asp-controller="Student" asp-action="Students">
                    <i class="fas fa-user-graduate"></i> Manage Students
                </a>

                <a class="@(controller == "Course" && action == "Index" ? "active" : "")" asp-controller="Course" asp-action="Index">
                    <i class="fas fa-book"></i> Manage Courses
                </a>
                <a class="@(controller == "InstructorPanel" && action == "Dashboard" ? "active" : "")" asp-controller="InstructorPanel" asp-action="Dashboard">
                    <i class="fas fa-book"></i> Instructor Panel
                </a>
            }
            else if (User.IsInRole("Admin"))
            {
                <!-- Admin Menu (Full Access) -->
                <a class="@(controller == "Admin" && action == "Dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>

                <a class="@(controller == "Admin" && action == "Branches" ? "active" : "")" asp-controller="Admin" asp-action="Branches">
                    <i class="fas fa-code-branch"></i> Manage Branches
                </a>

                <a class="@(controller == "Admin" && action == "Departments" ? "active" : "")" asp-controller="Admin" asp-action="Departments">
                    <i class="fas fa-building"></i> Manage Departments
                </a>

                <a class="@(controller == "Instructor" && action == "Instructors" ? "active" : "")" asp-controller="Instructor" asp-action="Instructors">
                    <i class="fas fa-user-tie"></i> Manage Instructors
                </a>

                <a class="@(controller == "Student" && action == "Students" ? "active" : "")" asp-controller="Student" asp-action="Students">
                    <i class="fas fa-user-graduate"></i> Manage Students
                </a>

                <a class="@(controller == "Course" && action == "Index" ? "active" : "")" asp-controller="Course" asp-action="Index">
                    <i class="fas fa-book"></i> Manage Courses
                </a>

                <a class="@(controller == "Course" && action == "Courses" ? "active" : "")" asp-controller="Course" asp-action="Courses">
                    <i class="fas fa-link"></i> Assign Courses
                </a>
            }
        </div>


        <!-- User Section at Bottom -->
        <div class="user-section">
            @if (User.Identity.IsAuthenticated)
            {
                <p class="text-white mb-2"><i class="fas fa-user"></i> Hello @User.Identity.Name!</p>
                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-sm btn-danger w-100"><i class="fas fa-sign-out-alt"></i> Logout</button>
                </form>
            }
            else
            {
                <a class="text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                <a class="text-white" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-user-plus"></i> Register</a>
            }
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ADB_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
 *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
