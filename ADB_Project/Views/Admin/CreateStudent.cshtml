@model ADB_Project.Models.Student

@{
    ViewData["Title"] = "Create New Student";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Create New Student</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateStudent" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    @* Student Name *@
                    <div class="col-md-6">
                        <label asp-for="StudentName" class="form-label">Full Name</label>
                        <input asp-for="StudentName" class="form-control" placeholder="e.g., John Smith" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>

                    @* Email *@
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="user@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    @* Password *@
                    <div class="col-md-6">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" id="password" type="password" class="form-control" required />
                        <small class="form-text text-muted">The password for the student's login account.</small>
                    </div>

                    @* Phone *@
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    @* Department *@
                    <div class="col-md-6">
                        <label asp-for="DeptId" class="form-label">Department</label>
                        <select asp-for="DeptId" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "DeptId", "DeptName"))">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>

                    @* Branch *@
                    <div class="col-md-6">
                        <label asp-for="BranchId" class="form-label">Branch</label>
                        <select asp-for="BranchId" class="form-select" asp-items="@(new SelectList(ViewBag.Branches, "BranchId", "BranchName"))">
                            <option value="">-- Select Branch --</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>

                    @* Enrollment Date *@
                    <div class="col-md-6">
                        <label asp-for="EnrollmentDate" class="form-label">Enrollment Date</label>
                        <input asp-for="EnrollmentDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                    </div>

                    @* Is Active *@
                    <div class="col-md-6 align-self-center">
                        <div class="form-check mt-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Create Student</button>
                    <a asp-action="Students" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
