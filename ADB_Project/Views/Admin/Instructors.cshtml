@model IEnumerable<ADB_Project.Models.Instructor>

@{
    ViewData["Title"] = "Manage Instructors";
}

<div class="container mt-4">

    @* لعرض رسائل النجاح بعد أي عملية *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge"></i> Manage Instructors</h2>
        <a asp-action="CreateInstructor" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Instructor
        </a>
    </div>

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Branch</th>
                        <th>Status</th>
                        <th style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var ins in Model)
                        {
                            <tr>
                                <td>@ins.InstructorId</td>
                                <td><strong>@ins.InstructorName</strong></td>
                                <td>@ins.Email</td>
                                <td>@(ins.Branch?.BranchName ?? "N/A")</td>
                                <td>
                                    @if (ins.IsActive == true)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @* 1. زر التعديل مع نص واضح *@
                                        <a asp-action="EditInstructor" asp-route-id="@ins.InstructorId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        @* 2. زر الحذف الذي يفتح نافذة التأكيد (Modal) *@
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@ins.InstructorId">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>

                                    <!-- ===================== Delete Confirmation Modal ===================== -->
                                    <div class="modal fade" id="deleteModal-@ins.InstructorId" tabindex="-1" aria-labelledby="deleteModalLabel-@ins.InstructorId" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="deleteModalLabel-@ins.InstructorId"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the instructor <strong>@ins.InstructorName</strong>?


                                                    <small class="text-danger">This will also delete their login account. This action cannot be undone.</small>
                                                </div>
                                                <div class="modal-footer">
                                                    <form asp-action="DeleteInstructor" method="post">
                                                        <input type="hidden" name="id" value="@ins.InstructorId" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Yes, Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- =================================================================== -->
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <p class="text-muted mb-1">No instructors found.</p>
                                <a asp-action="CreateInstructor" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-plus-circle"></i> Create the first one
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
